{
  "manifest_version": 3,
  "name": "AIC Chrome Extension",
  "version": "1.0.0",
  "description": "A Chrome extension that shows a floating button on X (Twitter), YouTube, and Trustpilot",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.youtube.com/*",
    "https://www.trustpilot.com/*",
    "http://localhost:3000/*",
    "http://intranet.aic.academy/web-crawler/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://www.youtube.com/*",
        "https://www.trustpilot.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
} 